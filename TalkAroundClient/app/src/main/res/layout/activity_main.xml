<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:src="@drawable/head_new"
        android:scaleType="fitStart"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#B8C2C9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/geoLocationZone"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#B8C2C9">
            <ImageButton
                android:id="@+id/smallLocBtn"
                android:src="@drawable/radius_100_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="setLocationSmall"
                android:text="@string/retrieve"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:background="#B8C2C9"/>
            <ImageButton
                android:id="@+id/mediumLocBtn"
                android:src="@drawable/radius_500_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/retrieve"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:onClick="setLocationMedium"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:background="#B8C2C9"/>
            <ImageButton
                android:id="@+id/bigLocBtn"
                android:src="@drawable/radius_1000_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/retrieve"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:onClick="setLocationBig"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:background="#B8C2C9"/>
        </LinearLayout>
        <TextView
            android:id="@+id/talksCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/talksFound"
            android:textSize="15sp"
            android:textColor="#92278F"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#E8EEF2">
        <ImageButton
            android:src="@drawable/refresh"
            android:background="#E8EEF2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/retrieve"
            android:onClick="retrieveSampleData"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="20dp"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:src="@drawable/add_new_talk_btn"
            android:background="#E8EEF2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/addTalk"
            android:onClick="startNewTalk"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:scaleType="fitCenter"/>
    </LinearLayout>
    <ListView
        android:id="@+id/talkList"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E8EEF2"
        android:paddingBottom="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp">
    </ListView>

</LinearLayout>